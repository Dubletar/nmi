body
  background #81b9f9
  margin 0
  padding 0
section
  &.profile
    .home-adam-icon
      width 150px
      height 150px
      border-radius 50%
      overflow hidden
      border 5px solid #fff
      margin 0 auto
      margin-top 5%
      img
        width 100%
        height 100%
    h1
      color #333
      font-size 20px
      margin-bottom 20px
      text-align center
  &.problems-list
    width 300px
    margin 0 auto
    background #ececec
    border-radius 15px
    overflow hidden
    .answers-header
      color #333
      font-weight bold
      text-align center
      padding 20px
      border-bottom 1px solid #aaa
    a
      text-decoration none
      .problem-list-item
        color #333
        padding 20px
        &:hover
          color #fff
          background #333
          cursor pointer
  &.navigation
    position fixed
    top 0
    left 0
    width 100%
    background #fcfcfc
    border-bottom #ccc
    display flex
    flex-direction row
    justify-content space-between
    .mini-profile
      height 50px
      width 50px
      border-radius 50%
      overflow hidden
      box-shadow 0 5 5 0 rgba(0,0,0,.15)
      margin 10px 20px
      img
        width 100%
        height 100%
    .pager-container
      width 200px
      display flex
      flex-direction row
      justify-content space-between
      margin-right 20px
      div
        font-weight bold
        font-size 16px
        color #333
        display flex
        align-items center
        &.previous,
        &.next
          a
            text-decoration none
            color #333
            &:hover
              text-decoration underline
              cursor pointer
  &.problem-header
    color #111
    font-size 20px
    font-weight bold
    text-align center
    margin-top 90px